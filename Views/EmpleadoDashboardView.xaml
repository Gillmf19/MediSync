<UserControl x:Class="MediSync.Views.EmpleadoDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="800">
    <Grid>

        <!-- Menú Lateral -->
        <Grid Background="#1A5276" Width="200" HorizontalAlignment="Left">
            <StackPanel Margin="10">
                <TextBlock Text="Menú" FontSize="16" FontWeight="Bold" Foreground="White" Margin="10"/>
                <Button Content="Dashboard" Background="Transparent" Foreground="White" Margin="5"/>
                <Button Content="Consulta de Productos" Background="Transparent" Foreground="White" Margin="5"/>
                <Button Content="Movimientos" Background="Transparent" Foreground="White" Margin="5"/>
                <Button Content="Reportes" Background="Transparent" Foreground="White" Margin="5"/>
            </StackPanel>
        </Grid>

        <!-- Contenido Principal -->
        <Grid Margin="210,10,10,10">
            <StackPanel Background="White">

                <!-- Encabezado -->
                <TextBlock Text="Dashboard - Usuario Operativo"
                           FontSize="18" FontWeight="Bold" Foreground="Black"
                           HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Secciones de Consulta y Movimientos -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Background="#D6EAF8" Padding="10" Margin="5" BorderBrush="Black" BorderThickness="1">
                        <TextBlock Text="📊 Consulta de Stock" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>

                    <Border Background="#D6EAF8" Padding="10" Margin="5" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                        <TextBlock Text="🔄 Movimientos Recientes" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Accesos Rápidos -->
                <Border Background="#D6EAF8" Padding="20" Margin="10,20" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="⚡ Accesos Rápidos" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                </Border>

            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
