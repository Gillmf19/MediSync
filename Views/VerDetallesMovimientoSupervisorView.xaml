<Window x:Class="MediSync.Views.VerDetallesMovimientoSupervisorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles del Movimiento" Height="350" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <!-- Para el botón en la parte inferior -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Detalles del Movimiento" FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,15"/>

        <!-- Producto -->
        <TextBlock Text="Producto:" FontWeight="Bold" Grid.Row="1"/>
        <TextBlock x:Name="txtProducto" Grid.Row="2" Padding="5"/>

        <!-- Cantidad -->
        <TextBlock Text="Cantidad:" FontWeight="Bold" Grid.Row="3"/>
        <TextBlock x:Name="txtCantidad" Grid.Row="4" Padding="5"/>

        <!-- Tipo de Movimiento -->
        <TextBlock Text="Tipo de Movimiento:" FontWeight="Bold" Grid.Row="5"/>
        <TextBlock x:Name="txtTipo" Grid.Row="6" Padding="5"/>

        <!-- Fecha -->
        <TextBlock Text="Fecha:" FontWeight="Bold" Grid.Row="7"/>
        <TextBlock x:Name="txtFecha" Grid.Row="8" Padding="5"/>

        <!-- Botón Cerrar en la parte inferior -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Cerrar" Width="120" Height="35" Click="BtnCerrar_Click"
                    Background="Gray" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
