<UserControl x:Class="MediSync.Views.GestionProductosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="800">
    <Grid Background="#FFFFFBFB">

        <!-- Encabezado -->
        <TextBlock Text=""
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10"/>

        <!-- Contenedor de Búsqueda y Botón Agregar -->
        <Grid Margin="10" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <!-- Campo de búsqueda con icono y placeholder -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Grid.Column="0" Height="35" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icono de búsqueda -->
                    <TextBlock Text="🔍" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <!-- Campo de entrada de búsqueda -->
                    <TextBox x:Name="txtBuscarProducto" Grid.Column="1" VerticalAlignment="Center"
                             BorderThickness="0" TextChanged="TxtBuscarProducto_TextChanged"/>

                    <!-- Placeholder simulado -->
                    <TextBlock x:Name="txtPlaceholder" Text="Buscar Producto" Foreground="Gray"
                               VerticalAlignment="Center" Grid.Column="1" Margin="5,0,0,0"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Botón para Agregar Producto -->
            <Button Content="➕ Agregar Producto" Width="180" Height="35"
                    Grid.Column="1" HorizontalAlignment="Right"
                    Background="#1A5276" Foreground="White" FontWeight="Bold"
                    Click="BtnAgregarProducto_Click"/>
        </Grid>

        <!-- Lista de Productos -->
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="10,60,10,10">
            <StackPanel Background="White">
                <TextBlock Text="Lista de Productos" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                <DataGrid x:Name="dgProductos" AutoGenerateColumns="False"
                          Height="378" SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="200"/>
                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100"/>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="150"/>
                        <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor}" Width="150"/>
                        <DataGridTemplateColumn Header="Acciones" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✏️ Editar" Width="70" Margin="5" Click="BtnEditarProducto_Click"/>
                                        <Button Content="🗑 Eliminar" Width="70" Margin="5" Click="BtnEliminarProducto_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
