<UserControl x:Class="MediSync.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="800">
    <Grid Background="#F0F0F0">
        <!-- Contenedor central -->
        <Border Width="350" Height="400" Background="White" CornerRadius="10"
                VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20">
            <StackPanel>
                <!-- Título -->
                <TextBlock Text="MediSync - Iniciar Sesión"
                           FontSize="18" FontWeight="Bold" Foreground="#1A5276"
                           HorizontalAlignment="Center" Margin="0,10"/>

                <!-- Campo Usuario -->
                <TextBlock Text="Usuario / Correo" FontSize="14" Foreground="Black" Margin="0,10,0,2"/>
                <TextBox x:Name="txtUsuario" Height="30" BorderBrush="Gray" BorderThickness="1" Padding="5"/>

                <!-- Campo Contraseña -->
                <TextBlock Text="Contraseña" FontSize="14" Foreground="Black" Margin="0,10,0,2"/>
                <PasswordBox x:Name="txtContrasena" Height="30" BorderBrush="Gray" BorderThickness="1" Padding="5"/>

                <!-- Botón de Inicio de Sesión -->
                <Button Content="🔑 Iniciar Sesión" Height="40" Background="#1A5276"
                        Foreground="White" FontWeight="Bold" Cursor="Hand"
                        Click="BtnLogin_Click" Margin="0,20,0,0"/>

                <!-- Enlace de Recuperación de Contraseña -->
                <TextBlock Text="¿Olvidaste tu contraseña?" Foreground="Blue"
                           HorizontalAlignment="Center" Cursor="Hand" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

